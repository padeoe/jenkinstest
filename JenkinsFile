node {
    stage('SCM') {
        git 'https://github.com/padeoe/jenkinstest.git'
    }

    stage('build') {
        sh 'mvn -B clean package'
    }

    stage('deploy') {
        sh 'docker cp target/jenkinsdemo-0.0.1-SNAPSHOT.war tomcat1:/usr/local/tomcat/webapps'
    }

    stage('results') {
        archiveArtifacts artifacts: '**/target/*.war', fingerprint: true
    }
}